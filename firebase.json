{
  "database": {
    "rules": "database.rules.json"
  },
  
    "hosting": {
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "dist/index.html"
        }
      ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
